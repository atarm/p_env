// いかにmarkdown.jsonを保存
// C:\\Users\\[userName]\\AppData\\Roaming\\Code\\User\\snippets\\markdown.json
{
	"赤文字を挿入": {
		"prefix": "red",
		"body": [
			"<span style='color: #F00;'>$1</span>"
		],
		"description": "赤文字を挿入"
	},

	"日付を挿入": {
		"prefix": "date",
		"body": [
			"$CURRENT_YEAR年$CURRENT_MONTH月$CURRENT_DATE日($CURRENT_DAY_NAME_SHORT)"
		],
		"description": "日付を挿入"
	},

	"現在時刻を挿入": {
		"prefix": "time",
		"body": [
			"$CURRENT_HOUR時$CURRENT_MINUTE分"
		],
		"description": "現在時刻を挿入"
	},

	"折り畳みを挿入": {
		"prefix": "det",
		"body": [
			"<details><summary>$1</summary>",
			"",
			"$2",
			"</details>"
		],
		"description": "折り畳みを挿入"
	},

	"テンプレートを挿入": {
		"prefix": "tpl",
		"body": [
			"<link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous'><div style='padding-top: 8rem;'>",
			"",
			"<!-- ↓右カラム↓ -->",
			"<div class='column-right'>",
			"",
			"<!-- Markdown All in One等で目次を挿入してください -->",
			"",
			"</div><div class='header'></div>",
			"<!-- ↑右カラム -->",
			"",
			"<!-- ↓左カラム(本文エリア)↓ -->",
			"<div class='column-left'>",
			"<!-- ↓題目エリア↓ -->",
			"<div style='margin-bottom: 48px;'>",
			"	<span style='font-size: 14px; color: rgba(0,0,0,0.6);'>作成日 $CURRENT_YEAR年$CURRENT_MONTH月$CURRENT_DATE日　</span>",
			"	<span style='font-size: 14px; color: rgba(0,0,0,0.6);'>更新日 xxxx年xx月xx日</span>",
			"	<h1 style='font-size: 36px; margin-top:8px; line-height: 1.4; border-bottom: none;'>$TM_FILENAME_BASE</h1>",
			"</div>",
			"<!-- ↑題目エリア↑ -->",
			"",
			"<!-- ↓本文エリア↓ -->",
			"# 見出し1",
			"テキスト1",
			"$1",
			"## 見出し2",
			"テキスト2",
			"<!-- ↑本文エリア↑ -->",
			"",
			"</div>",
			"<!-- ↑右カラム↑ -->",
			"",
			"</div>",
		],
		"description": "テンプレートを挿入"
	}
}